{
  "name": "taq-event-team-bot",
  "version": "0.0.0.1",
  "description": "Reads Google Form responses from Google Sheets and posts to Discord with approval reactions.",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "functions:mirror": "node scripts/generate-function-mirrors.js",
    "start:background": "node scripts/botctl.js start --background",
    "stop": "node scripts/botctl.js stop",
    "stop:background": "node scripts/botctl.js stop --background",
    "restart": "node scripts/botctl.js restart",
    "restart:background": "node scripts/botctl.js restart --background",
    "botctl": "node scripts/botctl.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.5",
    "googleapis": "^144.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
